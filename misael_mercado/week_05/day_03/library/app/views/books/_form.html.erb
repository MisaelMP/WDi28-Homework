<%= form_for @book do |f|%>
<%= f.label :title %>
<%= f.text_field :title, :autofocus => true %>

<%= f.label :year %>
<%= f.text_field :year %>

<%= f.label :genre %>
<%= f.text_field :genre %>

<%= f.label :cover %>
<%= f.text_field :cover %>

<%= f.label :writer_id %>
<%= f.select :writer_id, Writer.pluck(:name, :id), :include_blank => true %>

<%= f.submit %>

<% end %>
